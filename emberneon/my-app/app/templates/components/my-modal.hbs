<div class="overlay" {{action 'removeModal'}}></div>
<div class="modal">     
     <div class="head-popup {{selectedappColor}}">
	<span class="project-name">{{selectedappName}}</span> <span class="close-popup" {{action 'removeModal'}}>x</span>
      </div>
      <div class="body-popup">
	<table>
		<thead>
			<tr>
				<th>Server</th>
				<th>Version</th>
				<th>Branch</th>
                		<th>Status</th>
			</tr>
		</thead>
		<tbody class="body">
			{{#each data in serverStatusList}}	
				<tr class="{{data.colorStatus}}">
					<td><span class="{{data.colorStatus}}"></span>{{data.serverName}}</td>
					<td>{{data.version}}</td>
					<td>{{data.branch}}</td>
					<td>{{data.errorCode}}</td>
				</tr>		
        		{{/each}}
		</tbody>
	</table>
      </div>    
</div>
